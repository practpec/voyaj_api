{
  "info": {
    "name": "Usuario",
    "description": "Colección de endpoints para la gestión de usuarios en Voyaj API (Basado en BD Real)",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Sistema",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "API Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          }
        }
      ]
    },
    {
      "name": "Autenticación",
      "item": [
        {
          "name": "Registrar Usuario",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.to.have.status(201)) {",
                  "    const responseJson = pm.response.json();",
                  "    if (responseJson.data && responseJson.data.user) {",
                  "        pm.collectionVariables.set('userId', responseJson.data.user.id);",
                  "    }",
                  "    if (responseJson.data && responseJson.data.tokens) {",
                  "        pm.collectionVariables.set('authToken', responseJson.data.tokens.accessToken);",
                  "        pm.collectionVariables.set('refreshToken', responseJson.data.tokens.refreshToken);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"correo_electronico\": \"blackclic146@gmail.com\",\n  \"password\": \"Password123!\",\n  \"nombre\": \"Juan Carlos\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "register"]
            }
          }
        },
        {
          "name": "Iniciar Sesión",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.to.have.status(200)) {",
                  "    const responseJson = pm.response.json();",
                  "    if (responseJson.data && responseJson.data.user) {",
                  "        pm.collectionVariables.set('userId', responseJson.data.user.id);",
                  "    }",
                  "    if (responseJson.data && responseJson.data.tokens) {",
                  "        pm.collectionVariables.set('authToken', responseJson.data.tokens.accessToken);",
                  "        pm.collectionVariables.set('refreshToken', responseJson.data.tokens.refreshToken);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"correo_electronico\": \"blackclic146@gmail.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "login"]
            }
          }
        },
        {
          "name": "Renovar Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.to.have.status(200)) {",
                  "    const responseJson = pm.response.json();",
                  "    if (responseJson.data && responseJson.data.accessToken) {",
                  "        pm.collectionVariables.set('authToken', responseJson.data.accessToken);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/refresh-token",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "refresh-token"]
            }
          }
        },
        {
          "name": "Cerrar Sesión",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Verificación de Email",
      "item": [
        {
          "name": "Verificar Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"correo_electronico\": \"blackclic146@gmail.com\",\n  \"code\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/verify-email",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "verify-email"]
            }
          }
        },
        {
          "name": "Reenviar Verificación",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"correo_electronico\": \"blackclic146@gmail.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/resend-verification",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "resend-verification"]
            }
          }
        }
      ]
    },
    {
      "name": "Recuperación de Contraseña",
      "item": [
        {
          "name": "Solicitar Recuperación",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"correo_electronico\": \"blackclic146@gmail.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/forgot-password",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "forgot-password"]
            }
          }
        },
        {
          "name": "Restablecer Contraseña",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"correo_electronico\": \"blackclic146@gmail.com\",\n  \"code\": \"123456\",\n  \"newPassword\": \"NewPassword123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/reset-password",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "reset-password"]
            }
          }
        }
      ]
    },
    {
      "name": "Gestión de Perfil",
      "item": [
        {
          "name": "Obtener Perfil",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "profile"]
            }
          }
        },
        {
          "name": "Actualizar Perfil",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Juan Carlos Pérez\",\n  \"url_foto_perfil\": \"https://example.com/new-photo.jpg\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "profile"]
            }
          }
        },
        {
          "name": "Cambiar Contraseña",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"Password123!\",\n  \"newPassword\": \"NewPassword123!\",\n  \"confirmPassword\": \"NewPassword123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/change-password",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "change-password"]
            }
          }
        },
        {
          "name": "Eliminar Cuenta",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/account",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "account"]
            }
          }
        }
      ]
    },
    {
      "name": "Búsqueda y Consulta",
      "item": [
        {
          "name": "Buscar Usuarios",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "description": "Opcional para búsquedas públicas"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/search?query=Juan Carlos&page=1&limit=10&sortBy=nombre&sortOrder=asc",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "search"],
              "query": [
                {
                  "key": "query",
                  "value": "Juan Carlos",
                  "description": "Término de búsqueda (nombre, email)"
                },
                {
                  "key": "page",
                  "value": "1",
                  "description": "Número de página"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Elementos por página"
                },
                {
                  "key": "sortBy",
                  "value": "nombre",
                  "description": "Campo para ordenar"
                },
                {
                  "key": "sortOrder",
                  "value": "asc",
                  "description": "Orden: asc o desc"
                }
              ]
            }
          }
        },
        {
          "name": "Obtener Usuario por ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{userId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Gestión de Imágenes",
      "item": [
        {
          "name": "Subir Imagen de Perfil",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "profilePicture",
                  "type": "file",
                  "description": "Imagen de perfil (JPG, PNG, WebP, GIF - Max: 10MB)"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/profile/picture",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "profile", "picture"]
            }
          }
        },
        {
          "name": "Eliminar Imagen de Perfil",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/profile/picture",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "profile", "picture"]
            }
          }
        },
        {
          "name": "Subir Múltiples Fotos",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "photos",
                  "type": "file",
                  "description": "Hasta 10 fotos (JPG, PNG, WebP, GIF)"
                },
                {
                  "key": "photos",
                  "type": "file",
                  "description": "Foto adicional"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/photos",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "photos"]
            }
          }
        }
      ]
    },
    {
      "name": "Administración",
      "item": [
        {
          "name": "Estadísticas de Usuarios",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/admin/stats",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "admin", "stats"]
            }
          }
        },
        {
          "name": "Restaurar Usuario",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}/restore",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{userId}}", "restore"]
            }
          }
        }
      ]
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "console.log('Ejecutando request a:', pm.request.url.toString());"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "console.log('Response status:', pm.response.code);",
          "console.log('Response time:', pm.response.responseTime + 'ms');"
        ]
      }
    }
  ]
}