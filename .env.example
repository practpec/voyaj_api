# Configuración del servidor
NODE_ENV=development
PORT=3000
APP_VERSION=1.0.0

# Base de datos MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=voyaj

# JWT Secrets (cambiar en producción)
JWT_ACCESS_SECRET=tu-access-secret-muy-seguro-aqui
JWT_REFRESH_SECRET=tu-refresh-secret-muy-seguro-aqui

# SMTP Email (configurar con tu proveedor)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-contraseña-de-aplicacion
SMTP_FROM=noreply@voyaj.com

# URLs del frontend (para CORS)
FRONTEND_URL=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de logs
LOG_LEVEL=debug
LOG_FILE_SIZE=10485760
LOG_MAX_FILES=5

# Configuración de cache
CACHE_TTL=900000
CACHE_MAX_SIZE=1000